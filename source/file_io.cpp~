#include "file_io.hpp"

void loadRangeData(void)
{
	FILE *dataBinFile;	
	
	//open binary file
	dataBinFile = fopen("../../raw_data/baseline_uct_demo.bin", "r");

	//read from binary files into buffers
	fread(binBuffer, sizeof(int16_t), RANGELINES*SAMPLES_PER_LINE*2, dataBinFile);

	//close binary files
	fclose(dataBinFile);	

	printMsg("Range Data Loaded");
}

void loadRefData(void)
{
	std::vector<double> refVector;
	std::ifstream file("../../raw_data/waveform.txt");
    std::string line; 

    while (std::getline(file, line))
    {
		
	}

	//populate complex ref data and window
	for (int i = 0; i < PADRANGESIZE; i++)
	{		
		if (i < REFSIZE)
			realRefBuffer[i] = (float)((-1*refVector[i])*getWindowFactor(i, REFSIZE, HANNING));
		else
			realRefBuffer[i] = 0;
	}

	printMsg("Reference Data Loaded");	

}
